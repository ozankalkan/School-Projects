<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">

    <xsd:element name = "records">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name = "row" maxOccurs="unbounded">
                    <xsd:complexType>
                        <xsd:sequence>
                            <xsd:element name = "customer_info" type = "Customer"/>
                            <xsd:element name = "bank_account_info" type = "BankAccount"/>
                        </xsd:sequence>
                        <xsd:attribute name="id" type="xsd:decimal"/>
                    </xsd:complexType>
                </xsd:element>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>


    <xsd:complexType name="Customer">
        <xsd:sequence>
            <xsd:element name="name" >
                <xsd:simpleType>
                    <xsd:restriction base="xsd:string">
                        <xsd:maxLength value="20"/>
                        <xsd:pattern value="[^ ]+"/>
                    </xsd:restriction>
                </xsd:simpleType>
            </xsd:element>
            <xsd:element name="surname">
                <xsd:simpleType>
                    <xsd:restriction base="xsd:string">
                        <xsd:maxLength value="30"/>
                        <xsd:pattern value="[^ ]+"/>
                    </xsd:restriction>
                </xsd:simpleType>
            </xsd:element>
            <xsd:element name="gender">
                <xsd:simpleType>
                    <xsd:restriction base="xsd:string">
                        <xsd:enumeration value="F"/>
                        <xsd:enumeration value="M"/>
                    </xsd:restriction>
                </xsd:simpleType>
            </xsd:element>
            <xsd:element name="occupancy">
                <xsd:simpleType>
                    <xsd:restriction base="xsd:string">
                        <xsd:maxLength value="30"/>
                    </xsd:restriction>
                </xsd:simpleType>
            </xsd:element>
            <xsd:element name="level_of_education">
                <xsd:simpleType>
                    <xsd:restriction base="xsd:string">
                        <xsd:enumeration value="PhD"/>
                        <xsd:enumeration value="MSc"/>
                        <xsd:enumeration value="BSc"/>
                        <xsd:enumeration value="HS"/>
                        <xsd:enumeration value="PS"/>
                    </xsd:restriction>
                </xsd:simpleType>
            </xsd:element>
            <xsd:element name="email">
                <xsd:simpleType>
                    <xsd:restriction base="xsd:string">
                        <xsd:pattern value="([a-zA-Z0-9._%+-]+@(gmail\.com|hotmail\.com|yahoo\.com))|"/>
                    </xsd:restriction>
                </xsd:simpleType>
            </xsd:element>
        </xsd:sequence>
    </xsd:complexType>
    
    <xsd:complexType name="BankAccount">
        <xsd:sequence>
            <xsd:element name="bank_account_number">
                <xsd:simpleType>
                    <xsd:restriction base="xsd:string">
                        <xsd:pattern value="[0-9]{4}-[0-9]{7}"/>
                        <xsd:length value="12"/>
                    </xsd:restriction>
                </xsd:simpleType>
            </xsd:element>
            <xsd:element name="IBAN">
                <xsd:simpleType>
                    <xsd:restriction base="xsd:string">
                        <xsd:pattern value="TR[0-9]{2} [0-9]{4} [0-9]{4} [0-9]{4} [0-9]{4} [0-9]{2}"/>
                        <xsd:length value="27"/>
                    </xsd:restriction>
                </xsd:simpleType>
            </xsd:element>
            <xsd:element name="account_type">
                <xsd:simpleType>
                    <xsd:restriction base="xsd:string">
                        <xsd:enumeration value="deposit"/>
                        <xsd:enumeration value="drawing"/>
                        <xsd:enumeration value="daily_deposit"/>
                    </xsd:restriction>
                </xsd:simpleType>
            </xsd:element>
            <xsd:element name="total_balance_available">
                <xsd:complexType>
                    <xsd:simpleContent>   
                        <xsd:extension base="xsd:decimal"> 
                            <xsd:attribute name="currency_unit" use="required">
